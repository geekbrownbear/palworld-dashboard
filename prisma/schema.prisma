generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServerMetrics {
  id                Int      @id @default(autoincrement())
  serverfps         Int
  currentplayernum  Int
  serverframetime   Float
  maxplayernum      Int
  uptime            Int
  timestamp         DateTime @default(now())

  @@map("server_metrics")
}

model ServerEvent {
  id        Int      @id @default(autoincrement())
  type      String
  playerId  String?
  message   String?
  adminUser String
  timestamp DateTime @default(now())

  @@map("server_events")
}

model Player {
  id         String   @id
  name       String
  userId     String   @unique
  ip         String
  ping       Float
  locationX  Float
  locationY  Float
  level      Int
  lastSeen   DateTime @default(now())
  createdAt  DateTime @default(now())

  @@map("players")
}
